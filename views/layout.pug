doctype html
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    // Bootstrap styling
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    // Customize styling
    link(rel='stylesheet' href='/stylesheets/style.css')
    link(rel='apple-touch-icon' sizes='180x180' href='/images/icon/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='/images/icon/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='/images/icon/favicon-16x16.png')
    // Bootstrap JavaScript
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
  

  body

    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.fixed-top.navbar-custom
      #mynav.container
        a.navbar-brand(href='/') 
          img.img-responsive(src='/images/logo.png' alt='Travel Expert')
        // toggle for mobile devices
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#mymenue')
          span.navbar-toggler-icon
        collapse.navbar-collapse
          ul.navbar-nav.justify-content-left
            li.nav-item
              a.nav-link(href='/') Home
            li.nav-item
              a.nav-link(href='/gallery') Gallery
            li.nav-item
              a.nav-link(href='/contact') Contact us
            li.nav-item
              a.nav-link(href='/location/only') Locations          

            if currentUser
              li.nav-item
                a.nav-link(href='/booking/all/' + currentUser.CustomerId) My Bookings


            if !currentUser
              li.nav-item
                a.nav-link(href='/users/sign-up') Sign-up

  
            if currentUser && currentUser.role == "mgmt"     
                li.nav-item.dropdown
                  a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false') Admin/Mgmt
                  ul.dropdown-menu(aria-labelledby='navbarDropdown')
                      li
                        a.dropdown-item(href='/admin/mgmtview') Dashboard (Mongo Chart )
                      li
                        a.dropdown-item(href='/datamanagers') Dashboard (Dash)
                                               
                      li
                        a.dropdown-item(href='/location/')  Edit Location
                      li
                        a.dropdown-item(href='/contact/display-contact')  Contact List
                                         
              
            if currentUser && currentUser.role == "agent"     
                li.nav-item.dropdown
                    a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false') Admin/Agent
                    ul.dropdown-menu(aria-labelledby='navbarDropdown')
                      li
                          a.dropdown-item(href='/dataagents') Dashboard (Dash)                
                      li
                          a.dropdown-item(href='/admin/agentlist') Edit List 
                 
               
    
      //- li.nav-item//
      if currentUser
        span.mt-2.text-white| Welcome Back #{currentUser.username}           
        //- a(href="/log-out") Log Out
        a.btn.btn-warning.ms-2(href='/log-out' role='button') Log Out
      else
        //- a(href="/users/login") Please Login
        a.btn.btn-primary.me-2(href='/users/login' role='button') Please Login
        
            
    // End of Navbar
 
    

  
    
