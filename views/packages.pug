extends layout



block content
    // Marketing section
    .banner
      .card.bg-dark.text-white
        img#mybanner.card-img(src='/images/marketing.jpg' alt='marketing')
        .card-img-overlay
         
          h5.card-title City breaks to suit every style!
          p.card-text
            | Make the most of your vacation time with our selection  
            br
            |of getaway options fit for summer fu
           
                
        //- - var  i = 0;
    #mypackage.container
      h1 Browse by Vacation Destination
        .card-group.gap-3
          each prod in packages
            .card.mt-5               
                img.card-img-top(src=prod.imagpath alt='canada')
                .card-body
                  h5.card-title #{prod.PkgName}
                  p.card-text
                    | Price: #{prod.PkgBasePrice}
                    //- |some texts gopes here
                  //- <a class="btn btn-primary" (href="/packages/details/"+ i++) role="button">Buy</a>
                  if !isdetails
                    a.btn.btn-primary(href='/packages/details/'+ prod.PackageId)  Details
                  else
                    .card-body
                      p.card-text
                        
                        |#{prod.PkgDesc}
                      a.btn.btn-primary(href='/packages/details/'+ prod.PackageId)  Buy 



