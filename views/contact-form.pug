extends layout

block content
  title Contact Us

  // Marketing section
  .banner
    .card.bg-dark.text-white
      img#mybanner.card-img(src='/images/marketingcontact.jpg' alt='marketing')
      .card-img-overlay



  // Section: Contact v.2
  .container
    // Section heading
    h2.h1-responsive.font-weight-bold.text-center.my-4 Contact us
    // Section description
    p.text-center.w-responsive.mx-auto.mb-5
      | Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
      | a matter of hours to help you.
    .row
      // Grid column
      .col-md-9.mb-md-0.mb-5.contactcustom
        form#contact-form(method='POST' action='/contact' )
          // Grid row
          .row
            // Grid column
            .col-md-6.p-3
              .md-form.mb-0
                label(for='name') Your name
                input#name.form-control(type='text' name='name' value=contactdata && contactdata.name required )
            // Grid column
            // Grid column
            .col-md-6.p-3
              .md-form.mb-0
                label(for='email') Your email
                input#email.form-control(type='email' name='email' value=contactdata && contactdata.email required)

            // Grid column
            // Grid row
            // Grid row
            .row
              .col-md-12.p-3
                .md-form.mb-0
                  label(for='subject') Subject
                  input#subject.form-control(type='text' name='subject' value=contactdata && contactdata.subject required)

            // Grid row
            // Grid row
            .row
              // Grid column
              .col-md-12.p-3
                .md-form
                  label(for='message') Your message
                  textarea#message.form-control.md-textarea.usermessage(type='text' name='message' value=contactdata && contactdata.message required)

            // Grid row
            //- .row
            //-   .col-md-12.p-3
            //-     .md-form.mb-0
            //-       label(for='url') URL
            //-       input#url.form-control(type='text' name='contacturl' value=contactdata && contactdata.contacturl required)

            .text-center.text-md-left.mt-2
            //- button.btn.btn-primary.btn-lg(type='submit') Send

            //- <a class="btn btn-primary btn-lg" href="/thankyou" role="button">Send</a>
            <button class="btn btn-primary" type="submit">Submit</button>

            //throwing error in filling form
        if errors 
          ul 
            each error in errors 
              li.alert.alert-danger= error

        //-   a.btn.btn-primary(onclick="document.getElementById('contact-form').submit();") Send
